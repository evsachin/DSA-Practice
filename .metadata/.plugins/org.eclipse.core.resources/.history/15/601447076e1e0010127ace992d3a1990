package evision;

import java.util.Scanner;

public class FactorialOfGivenNumber {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter a number = ");
		int num = sc.nextInt();
		System.out.println("Facoraial of given number is = " + calculateFctorial(num));
	}

	private static Object calculateFctorial(int num) {
		// TODO Auto-generated method stub
		int fact = 1;
		
		for(int i = num; i >0; i--) {
			fact = fact * i;
		}
		
		return fact;
	}
}
